<a href="http://localhost:8080/products"><button class="button is-danger mt-3">Continuar comprando</button></a>
<h1 class="title__cartpage">CHECKOUT</h1>
{{#if cart.length}}
  <table class="table__cart">
    <thead>
      <tr>
        <th>Titulo</th>
        <th>Precio</th>
        <th>Cantidad</th>
      </tr>
    </thead>
    <tbody>
      {{#each cart}}
      <div class="ticketInfo" id="{{this.cart}}">
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.price}}</td>
          <td>{{this.quantity}}</td>
          <td>{{this.cart}}</td>
          <td><button onclick="removeProductFromCart('{{../cart._id}}', '{{this.product._id}}')">Eliminar</button></td>
        </tr>
      </div>
      {{/each}}
    </tbody>
  </table>
  <button class="button is-danger mt-3" id="btnComprar" onclick="clearCart()">Vaciar carrito</button>
  <button onclick="purchaseCart()" class="button is-danger mt-3">FINALIZAR COMPRA</button>
  </div>
{{else}}
  <p>No products in the cart</p>
{{/if}}

<script src="/socket.io/socket.io.js"></script>
<script src="/js/cart.js"></script>
